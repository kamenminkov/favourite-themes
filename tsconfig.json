{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"outDir": "out",
		"lib": ["ESNext", "ESNext.Array"],
		"sourceMap": true,
		// "sourceRoot": ".",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
		/* Additional Checks */
