{
	"name": "favourite-themes",
	"author": {
		"name": "Kamen Minkov",
		"url": "https://github.com/kamenminkov"
	},
	"publisher": "kminkov",
	"repository": {
		"url": "https://github.com/kamenminkov/favourite-themes"
	},
	"displayName": "Favourite Themes",
	"description": "",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:favourite-themes.selectColourTheme"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "favourite-themes.selectColourTheme",
				"title": "Pick Theme"
			}
		],
		"configuration": [
			{
				"title": "FavouriteThemes",
				"properties": {
					"favouriteThemes.pinnedThemes": {
						"type": "array",
						"default": [],
						"description": "Themes added here will stay pinned at the top of the theme picker"
					}
				}
			},
			{
				"title": "FavouriteThemes",
				"properties": {
					"favouriteThemes.darkThemesFirst": {
						"type": "boolean",
						"default": true
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"prettier": "2.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
